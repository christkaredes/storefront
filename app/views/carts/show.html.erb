<p id="notice" class="w3-panel"><%= notice %></p>

<div class="w3-panel">

<table class="w3-table-all">
<thead>
  <tr>
    <th><h1>Cart</h1></th>
    <th></th>
  </tr>
</thead>
<tbody>
  
<% @cart.line_items.each do |item| %>  
<tr>
  <td><%= item.quantity %> &times; <%= item.product.title %></td>
  <td><%= item.product.price %></td>
</tr>
<% end %>

<tr>
<td>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class:"w3-button w3-round w3-deep-orange" %>

</td>
  
<td>
<%= link_to 'Keep Shopping', carts_path , class:"w3-button w3-round w3-deep-orange" %>
  
</td>
  
</tr>
  <tr><td><%= button_to "Checkout", new_order_path, method: :get, class:"w3-button w3-round w3-deep-orange" %></td>

<td></td>

</tr>
</tbody>
</table>
</div>